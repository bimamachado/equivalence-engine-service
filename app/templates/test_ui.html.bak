<!doctype html>
<html lang="pt-BR">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Equivalence Engine ‚Äî Test UI</title>
  <style>
    * { box-sizing: border-box; margin: 0; padding: 0; }
    
    :root {
      --primary: #6366f1;
      --primary-dark: #4f46e5;
      --primary-light: #818cf8;
      --secondary: #ec4899;
      --success: #10b981;
      --warning: #f59e0b;
      --danger: #ef4444;
      --dark: #0f172a;
      --dark-card: #1e293b;
      --dark-border: #334155;
      --text: #f1f5f9;
      --text-muted: #94a3b8;
      --bg-gradient: linear-gradient(135deg, #0f172a 0%, #1e293b 100%);
    }
    
    body {
      font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
      background: var(--bg-gradient);
      color: var(--text);
      min-height: 100vh;
      padding: 20px;
      line-height: 1.6;
    }
    
    .container {
      max-width: 1200px;
      margin: 0 auto;
    }
    
    /* Header */
    header {
      background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
      padding: 32px;
      border-radius: 16px;
      margin-bottom: 24px;
      box-shadow: 0 20px 60px rgba(99, 102, 241, 0.3);
      position: relative;
      overflow: hidden;
    }
    
    header::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: url('data:image/svg+xml,<svg width="100" height="100" xmlns="http://www.w3.org/2000/svg"><rect width="100" height="100" fill="none"/><circle cx="50" cy="50" r="40" stroke="rgba(255,255,255,0.1)" stroke-width="2" fill="none"/></svg>');
      opacity: 0.3;
    }
    
    header h1 {
      font-size: 28px;
      font-weight: 700;
      margin-bottom: 8px;
      position: relative;
      display: flex;
      align-items: center;
      gap: 12px;
    }
    
    header h1::before {
      content: '‚ö°';
      font-size: 32px;
    }
    
    header p {
      color: rgba(255, 255, 255, 0.95);
      font-size: 15px;
      position: relative;
    }
    
    /* Tabs */
    .tabs {
      display: flex;
      gap: 8px;
      margin-bottom: 24px;
      background: var(--dark-card);
      padding: 6px;
      border-radius: 12px;
      border: 1px solid var(--dark-border);
    }
    
    .tab-btn {
      flex: 1;
      padding: 12px 24px;
      background: transparent;
      color: var(--text-muted);
      border: none;
      border-radius: 8px;
      cursor: pointer;
      font-weight: 600;
      transition: all 0.3s ease;
      font-size: 14px;
    }
    
    .tab-btn.active {
      background: var(--primary);
      color: white;
      box-shadow: 0 4px 12px rgba(99, 102, 241, 0.4);
    }
    
    .tab-btn:hover:not(.active) {
      background: rgba(99, 102, 241, 0.1);
      color: var(--text);
    }
    
    /* Card */
    .card {
      background: var(--dark-card);
      border-radius: 16px;
      padding: 28px;
      margin-bottom: 20px;
      border: 1px solid var(--dark-border);
      box-shadow: 0 4px 24px rgba(0, 0, 0, 0.2);
    }
    
    /* Form elements */
    .form-group {
      margin-bottom: 24px;
    }
    
    label {
      display: block;
      margin-bottom: 8px;
      font-weight: 600;
      color: var(--text);
      font-size: 14px;
    }
    
    input[type="text"] {
      width: 100%;
      max-width: 500px;
      padding: 12px 16px;
      background: var(--dark);
      border: 2px solid var(--dark-border);
      border-radius: 10px;
      color: var(--text);
      font-size: 14px;
      transition: all 0.3s ease;
    }
    
    input[type="text"]:focus {
      outline: none;
      border-color: var(--primary);
      box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.1);
    }
    
    /* Buttons grid */
    .buttons-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
      gap: 10px;
      margin: 16px 0;
    }
    
    button {
      padding: 12px 20px;
      border: none;
      border-radius: 10px;
      font-weight: 600;
      font-size: 13px;
      cursor: pointer;
      transition: all 0.3s ease;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 8px;
    }
    
    .btn-success {
      background: var(--success);
      color: white;
    }
    
    .btn-warning {
      background: var(--warning);
      color: white;
    }
    
    .btn-danger {
      background: var(--danger);
      color: white;
    }
    
    .btn-primary {
      background: var(--primary);
      color: white;
      box-shadow: 0 4px 12px rgba(99, 102, 241, 0.3);
    }
    
    .btn-secondary {
      background: var(--dark);
      color: var(--text);
      border: 2px solid var(--dark-border);
    }
    
    button:hover {
      transform: translateY(-2px);
      filter: brightness(1.1);
    }
    
    button:active {
      transform: translateY(0);
    }
    
    /* Textarea */
    textarea {
      width: 100%;
      min-height: 320px;
      padding: 16px;
      background: var(--dark);
      border: 2px solid var(--dark-border);
      border-radius: 10px;
      color: var(--text);
      font-family: 'Fira Code', 'Courier New', monospace;
      font-size: 13px;
      line-height: 1.6;
      resize: vertical;
      transition: all 0.3s ease;
    }
    
    textarea:focus {
      outline: none;
      border-color: var(--primary);
      box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.1);
    }
    
    /* Actions bar */
    .actions {
      display: flex;
      align-items: center;
      gap: 16px;
      margin-top: 20px;
      padding-top: 20px;
      border-top: 1px solid var(--dark-border);
    }
    
    .status {
      display: flex;
      align-items: center;
      gap: 8px;
      padding: 8px 16px;
      background: var(--dark);
      border-radius: 8px;
      font-size: 13px;
      font-weight: 600;
    }
    
    .status.loading::before {
      content: '‚è≥';
      animation: pulse 1.5s ease-in-out infinite;
    }
    
    .status.success::before {
      content: '‚úì';
      color: var(--success);
    }
    
    .status.error::before {
      content: '‚úï';
      color: var(--danger);
    }
    
    @keyframes pulse {
      0%, 100% { opacity: 1; }
      50% { opacity: 0.5; }
    }
    
    /* Response section */
    .response-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 16px;
    }
    
    .response-header h3 {
      font-size: 18px;
      color: var(--text);
    }
    
    .copy-btn {
      padding: 8px 16px;
      font-size: 12px;
      background: var(--dark);
      border: 1px solid var(--dark-border);
    }
    
    pre {
      background: var(--dark);
      padding: 20px;
      border-radius: 10px;
      overflow-x: auto;
      border: 2px solid var(--dark-border);
      font-size: 13px;
      line-height: 1.6;
      max-height: 600px;
      overflow-y: auto;
    }
    
    pre::-webkit-scrollbar {
      width: 8px;
      height: 8px;
    }
    
    pre::-webkit-scrollbar-track {
      background: var(--dark-card);
      border-radius: 4px;
    }
    
    pre::-webkit-scrollbar-thumb {
      background: var(--dark-border);
      border-radius: 4px;
    }
    
    pre::-webkit-scrollbar-thumb:hover {
      background: var(--primary);
    }
    
    .empty-state {
      text-align: center;
      padding: 60px 20px;
      color: var(--text-muted);
    }
    
    .empty-state::before {
      content: 'üìã';
      display: block;
      font-size: 48px;
      margin-bottom: 16px;
      opacity: 0.5;
    }
    
    /* Responsive */
    @media (max-width: 768px) {
      header h1 { font-size: 22px; }
      .card { padding: 20px; }
      .buttons-grid { grid-template-columns: 1fr; }
      textarea { min-height: 240px; }
    }
  </style>
</head>
<body>
  <div class="container">
    <header>
      <h1>Equivalence Engine</h1>
      <p>Envie um payload JSON para <code>/v1/equivalences/evaluate</code> e veja a resposta em tempo real.</p>
    </header>

    <div class="tabs">
      <button class="tab-btn active" id="tabBtnSingle">üìÑ Avalia√ß√£o Individual</button>
      <button class="tab-btn" id="tabBtnBatch">üì¶ Processamento em Lote</button>
    </div>

    <!-- Single Tab -->
    <div id="tab-single" class="card">
      <div class="form-group">
        <label>üîë API Key</label>
        <input type="text" id="apiKey" value="dev-client-abc123" placeholder="Insira sua API key..."/>
      </div>

      <div class="form-group">
        <label>üìù Exemplos R√°pidos</label>
        <div class="buttons-grid">
          <button class="btn-success" id="loadDeferido">‚úì Deferido (completo)</button>
          <button class="btn-danger" id="loadIndeferido">‚úï Indeferido (completo)</button>
          <button class="btn-warning" id="loadHumano">üë§ An√°lise Humana (completo)</button>
          <button class="btn-success btn-secondary" id="loadMinDeferido">‚úì Deferido (m√≠nimo)</button>
          <button class="btn-danger btn-secondary" id="loadMinIndeferido">‚úï Indeferido (m√≠nimo)</button>
          <button class="btn-warning btn-secondary" id="loadMinHumano">üë§ Humano (m√≠nimo)</button>
        </div>
      </div>

      <div class="form-group">
        <label>üíª Payload JSON</label>
        <textarea id="payload">{
  "request_id": "manual-1",
  "origem": {"nome":"Curso A","carga_horaria":60,"ementa":"Exemplo"},
  "destino": {"nome":"Curso B","carga_horaria":60,"ementa":"Exemplo"},
  "taxonomy_version": "2026.01",
  "policy_version": "v3"
}</textarea>
      </div>

      <div class="actions">
        <button class="btn-primary" id="send">üöÄ Enviar Requisi√ß√£o</button>
        <div class="status" id="status" style="display: none;"></div>
      </div>
    </div>

    <!-- Batch Tab -->
    <div id="tab-batch" class="card" style="display:none;">
      <div class="form-group">
        <label>üîë API Key</label>
        <input type="text" id="apiKeyBatch" value="dev-client-abc123" placeholder="Insira sua API key..."/>
      </div>

      <div class="form-group">
        <label>üìù Exemplos de Lote</label>
        <div class="buttons-grid">
          <button class="btn-primary" id="loadBatch">üìã Carregar Exemplo (3 itens)</button>
          <button class="btn-success" id="sendBatch">üöÄ Processar Lote</button>
        </div>
      </div>

      <div class="form-group">
        <label>üíª Batch Payload JSON</label>
        <textarea id="batchPayload">{
  "items": [
    {
      "request_id": "batch-1",
      "origem": {"nome":"Banco de Dados","carga_horaria":60,"ementa":"SQL.","nivel":"intermediario"},
      "destino": {"nome":"Sistemas de Banco de Dados","carga_horaria":60,"ementa":"SQL.","nivel":"intermediario"},
      "taxonomy_version": "2026.01",
      "policy_version": "v3"
    }
  ]
}</textarea>
      </div>
        <div class="row" style="margin-top:12px">
          <span id="statusBatch"></span>
        </div>
    </div>

    <!-- Response Section -->
    <div class="card">
      <div class="response-header">
        <h3>üìä Resposta da API</h3>
        <button class="copy-btn" id="copyBtn" style="display: none;">üìã Copiar</button>
      </div>
      <pre id="result"><div class="empty-state">Nenhuma resposta ainda. Envie uma requisi√ß√£o para ver os resultados.</div></pre>
      <div style="height:12px"></div>
      <div class="response-header">
        <h3>üì¶ Resultado do Lote</h3>
      </div>
      <pre id="resultBatch"><div class="empty-state">Nenhuma resposta de lote ainda. Envie um lote para ver os resultados.</div></pre>
    </div>
  </div>

  <script>
    // Exemplos prontos
    const exampleDeferido = {
      request_id: "ex-deferido-001",
      origem: {
        instituicao: "Universidade Federal do Rio de Janeiro (UFRJ)",
        codigo: "BCC310",
        nome: "Banco de Dados",
        carga_horaria: 60,
        credito: 4,
        nivel: "intermediario",
        ementa: "Modelagem relacional, algebra relacional, SQL, normaliza√ß√£o, transa√ß√µes e integridade.",
        objetivos: ["Modelar bancos de dados","Escrever consultas SQL complexas"]
      },
      destino: {
        instituicao: "Universidade Estadual de Campinas (UNICAMP)",
        codigo: "BCC343",
        nome: "Sistemas de Banco de Dados",
        carga_horaria: 60,
        credito: 4,
        nivel: "intermediario",
        ementa: "Modelagem, SQL, √≠ndices, transa√ß√µes, e desempenho de bancos de dados.",
        objetivos: ["Projetar esquemas relacionais","Optimizar consultas"]
      },
      context: {aluno: "Mariana Costa", matricula: "201912345"},
      taxonomy_version: "2026.01",
      policy_version: "v3",
      expected: "deferido"
    };

    const exampleIndeferido = {
      request_id: "ex-indeferido-002",
      origem: {
        instituicao: "Universidade Federal do Cear√° (UFC)",
        codigo: "MAT150",
        nome: "C√°lculo Diferencial e Integral I",
        carga_horaria: 20,
        credito: 6,
        nivel: "intermediario",
        ementa: "Limites, derivadas, aplica√ß√µes de derivadas e integrais, t√©cnicas de integra√ß√£o.",
        objetivos: ["Calcular derivadas e integrais","Aplicar conceitos em problemas f√≠sicos"]
      },
      destino: {
        instituicao: "Instituto Federal X",
        codigo: "MAT010",
        nome: "Matem√°tica B√°sica",
        carga_horaria: 30,
        credito: 2,
        nivel: "basico",
        ementa: "No√ß√µes b√°sicas de √°lgebra, fun√ß√µes e trigonometria.",
        objetivos: ["Resolver equa√ß√µes b√°sicas","Compreender fun√ß√µes elementares"]
      },
      context: {aluno: "Pedro Albuquerque", matricula: "202021987"},
      taxonomy_version: "2026.01",
      policy_version: "v3",
      expected: "indeferido"
    };

    const exampleHumano = {
      request_id: "ex-humano-003",
      origem: {
        instituicao: "Universidade Federal de Santa Catarina (UFSC)",
        codigo: "FIS220",
        nome: "F√≠sica II",
        carga_horaria: 60,
        credito: 4,
        nivel: "intermediario",
        ementa: "Eletromagnetismo: campos el√©tricos e magn√©ticos, leis de Maxwell em forma integral.",
        objetivos: ["Entender campos eletromagn√©ticos","Resolver problemas usando equa√ß√µes de Maxwell"]
      },
      destino: {
        instituicao: "Universidade Estadual Paulista (UNESP)",
        codigo: "FIS210",
        nome: "Eletromagnetismo",
        carga_horaria: 75,
        credito: 5,
        nivel: "avancado",
        ementa: "Campos eletromagn√©ticos, equa√ß√µes de Maxwell, aplica√ß√µes em circuitos e ondas.",
        objetivos: ["Analisar fen√¥menos eletromagn√©ticos","Aplicar teoria em projetos pr√°ticos"]
      },
      context: {aluno: "Ana Beatriz", matricula: "202110555"},
      taxonomy_version: "2026.01",
      policy_version: "v3",
      policy: { tolerancia_carga: 0.8 },
      note: "Similaridade alta nos t√≥picos, mas diferen√ßa na carga hor√°ria e √™nfase pr√°tica"
    };

    const minimalDeferido = {
      request_id: "min-deferido-01",
      origem: { nome: "Banco de Dados", carga_horaria: 60, ementa: "SQL e modelagem relacional.", nivel: "intermediario"},
      destino: { nome: "Sistemas de Banco de Dados", carga_horaria: 60, ementa: "SQL e √≠ndices.", nivel: "intermediario"},
      taxonomy_version: "2026.01",
      policy_version: "v3"
    };

    const minimalIndeferido = {
      request_id: "min-indeferido-01",
      origem: { nome: "C√°lculo I", carga_horaria: 20, ementa: "Derivadas b√°sicas.", nivel: "intermediario"},
      destino: { nome: "Matem√°tica B√°sica", carga_horaria: 30, ementa: "√Ålgebra e trigonometria.", nivel: "basico"},
      taxonomy_version: "2026.01",
      policy_version: "v3"
    };

    const minimalHumano = {
      request_id: "min-humano-01",
      origem: { nome: "F√≠sica II", carga_horaria: 60, ementa: "Eletromagnetismo b√°sico.", nivel: "intermediario"},
      destino: { nome: "Eletromagnetismo", carga_horaria: 75, ementa: "Campos e equa√ß√µes de Maxwell.", nivel: "avancado"},
      policy: { tolerancia_carga: 0.8 },
      taxonomy_version: "2026.01",
      policy_version: "v3"
    };

    const exampleBatch = {
      items: [
        Object.assign({}, exampleDeferido, { request_id: 'batch-1-deferido' }),
        Object.assign({}, exampleIndeferido, { request_id: 'batch-2-indeferido' }),
        Object.assign({}, exampleHumano, { request_id: 'batch-3-humano' })
      ]
    };

    // DOM elements
    const tabBtnSingle = document.getElementById('tabBtnSingle');
    const tabBtnBatch = document.getElementById('tabBtnBatch');
    const tabSingle = document.getElementById('tab-single');
    const tabBatch = document.getElementById('tab-batch');
    const status = document.getElementById('status');
    const result = document.getElementById('result');
    const copyBtn = document.getElementById('copyBtn');

    // Tab switching
    tabBtnSingle.addEventListener('click', () => {
      tabBtnSingle.classList.add('active');
      tabBtnBatch.classList.remove('active');
      tabSingle.style.display = '';
      tabBatch.style.display = 'none';
    });

    tabBtnBatch.addEventListener('click', () => {
      tabBtnBatch.classList.add('active');
      tabBtnSingle.classList.remove('active');
      tabBatch.style.display = '';
      tabSingle.style.display = 'none';
    });

    // Load examples
    function setPayload(obj) {
      document.getElementById('payload').value = JSON.stringify(obj, null, 2);
    }

    document.getElementById('loadDeferido').addEventListener('click', () => setPayload(exampleDeferido));
    document.getElementById('loadIndeferido').addEventListener('click', () => setPayload(exampleIndeferido));
    document.getElementById('loadHumano').addEventListener('click', () => setPayload(exampleHumano));
    document.getElementById('loadMinDeferido').addEventListener('click', () => setPayload(minimalDeferido));
    document.getElementById('loadMinIndeferido').addEventListener('click', () => setPayload(minimalIndeferido));
    document.getElementById('loadMinHumano').addEventListener('click', () => setPayload(minimalHumano));
    
    document.getElementById('loadBatch').addEventListener('click', () => {
      document.getElementById('batchPayload').value = JSON.stringify(exampleBatch, null, 2);
    });

    // Send single request
    document.getElementById('send').addEventListener('click', async () => {
      status.style.display = 'flex';
      status.className = 'status loading';
      status.textContent = 'Enviando requisi√ß√£o...';
      result.innerHTML = '<div class="empty-state">Processando...</div>';
      copyBtn.style.display = 'none';

      try {
        const body = JSON.parse(document.getElementById('payload').value);
        const apiKey = document.getElementById('apiKey').value;
        
        const res = await fetch('/v1/equivalences/evaluate', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json', 'X-API-Key': apiKey },
          body: JSON.stringify(body)
        });
        
        const text = await res.text();
        
        if (res.ok) {
          status.className = 'status success';
          status.textContent = `‚úì HTTP ${res.status} - Sucesso`;
        } else {
          status.className = 'status error';
          status.textContent = `‚úï HTTP ${res.status} - Erro`;
        }
        
        try {
          result.textContent = JSON.stringify(JSON.parse(text), null, 2);
        } catch(e) {
          result.textContent = text;
        }
        
        copyBtn.style.display = 'block';
      } catch (err) {
        status.className = 'status error';
        status.textContent = '‚úï Erro ao processar';
        result.textContent = String(err);
      }
    });

    // Send batch request (updates Batch-specific UI)
    const statusBatchEl = document.getElementById('statusBatch');
    const resultBatchEl = document.getElementById('resultBatch');
    document.getElementById('sendBatch').addEventListener('click', async () => {
      const apiKey = document.getElementById('apiKeyBatch').value;
      statusBatchEl.style.display = 'flex';
      statusBatchEl.className = 'status loading';
      statusBatchEl.textContent = 'Enviando lote...';
      resultBatchEl.innerHTML = '<div class="empty-state">Processando lote...</div>';

      try {
        const body = JSON.parse(document.getElementById('batchPayload').value);
        const res = await fetch('/v1/equivalences/batch', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json', 'X-API-Key': apiKey },
          body: JSON.stringify(body)
        });

        if (!res.ok) {
          const text = await res.text();
          statusBatchEl.className = 'status error';
          statusBatchEl.textContent = `‚úï HTTP ${res.status}`;
          resultBatchEl.textContent = text;
          return;
        }

        const data = await res.json();
        const jobId = data.job_id;

        const poll = async () => {
          const sj = await fetch(`/v1/jobs/${jobId}`, { headers: { 'X-API-Key': apiKey } });
          if (!sj.ok) {
            statusBatchEl.className = 'status error';
            statusBatchEl.textContent = `‚úï Erro ao buscar status`;
            resultBatchEl.textContent = await sj.text();
            return;
          }

          const sjd = await sj.json();
          statusBatchEl.className = 'status loading';
          statusBatchEl.textContent = `‚è≥ Job ${jobId} ‚Äî ${sjd.status} (${sjd.progress.done}/${sjd.progress.total})`;

          if (sjd.status === 'queued' || (sjd.progress && sjd.progress.done < sjd.progress.total)) {
            setTimeout(poll, 1500);
          } else {
            const r = await fetch(`/v1/jobs/${jobId}/results`, { headers: { 'X-API-Key': apiKey } });
            const results = await r.json();
            statusBatchEl.className = 'status success';
            statusBatchEl.textContent = `‚úì Processamento conclu√≠do`;
            resultBatchEl.textContent = JSON.stringify({job: sjd, results}, null, 2);
          }
        };

        setTimeout(poll, 800);
      } catch (err) {
        statusBatchEl.className = 'status error';
        statusBatchEl.textContent = '‚úï Erro';
        resultBatchEl.textContent = String(err);
      }
    });

    // Copy to clipboard
    copyBtn.addEventListener('click', () => {
      navigator.clipboard.writeText(result.textContent);
      const originalText = copyBtn.textContent;
      copyBtn.textContent = '‚úì Copiado!';
      setTimeout(() => {
        copyBtn.textContent = originalText;
      }, 2000);
    });
  </script>
</body>
